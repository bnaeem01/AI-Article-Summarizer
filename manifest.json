{
    "manifest_version": 3,
    "name": "Article Summarizer",
    "version": "1.0",
    "description": "Summarize articles using Hugging Face and Flask",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}